<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.example.camel.aggregation.GatewayRouter"
         name="Camel Aggregation Example"
         description="A Camel example application showing configuration and aggregation">
        
        <Icon resource="OSGI-INF/logo.png" size="32" />

        <AD id="minimum"
        	name="minimum"
            description="Lower limit"
            type="Integer"
            cardinality="1"
            required="true"
            default="0"/>
            
        <AD id="maximum"
        	name="maximum"
            description="Upper limit"
            type="Integer"
            cardinality="1"
            required="true"
            default="50"/>
    </OCD>

    <Designate pid="org.eclipse.kura.example.camel.aggregation.GatewayRouter">
        <Object ocdref="org.eclipse.kura.example.camel.aggregation.GatewayRouter"/>
    </Designate>
</MetaData>
